<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.upc.damo.llistapp">

    <!--<uses-permission android:name="android.permission.INTERNET" />-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuPrincipal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GestioAssignatures"
            android:parentActivityName=".MenuPrincipal"/>
        <activity
            android:name=".GestioAssistencies"
            android:parentActivityName=".MenuPrincipal"/>
        <activity
            android:name=".GestioEstudiants"
            android:parentActivityName=".MenuPrincipal"/>
        <activity
            android:name=".GestioEines"
            android:parentActivityName=".MenuPrincipal"/>
        <activity
            android:name=".AddEditAssignatura"
            android:parentActivityName=".GestioAssignatures"/>
        <activity
            android:name=".AddEditEstudiant"
            android:parentActivityName=".GestioEstudiants" />
        <activity
            android:name=".AddEditAssistencia"
            android:parentActivityName=".GestioAssistencies" />
    </application>

</manifest>